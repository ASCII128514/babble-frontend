<!-- pages/room/room.wxml -->
<view class="container">

<!-- top info section -->
  <view class="top-section">
      <!-- title -->
        <view class="title">
            {{numOfPeople}} people have joined
        </view>
      <!-- title ends -->

      <!-- button -->
        <view class="button" bindtap='getPair'>
          Waiting for others...
        </view>
      <!-- button ends -->
  </view>

  <view class="space">
  </view>
  <!-- top info section ends -->
  

  <!-- list with avatars and names -->
  <view class="players">
      <block wx:for="{{playerList}}" wx:for-item="player">
          <view class="card">
              <view class="product-info">
                <image class="avatar" src='{{player.selfie}}'></image>
                <view class="name">{{player.name}}</view>
            </view>
          </view>
      </block>
  </view>
