/**index.wxss**/
.background {
    color: white;
    text-align: center;
    height: 101vh;
    width: 100%;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    display: flex;
    align-items: center;
    justify-content: space-around;
  }

  .title {
    font-size: 45px;
    font-weight: bolder;
    text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
    margin-bottom: 200rpx;
  }

  .teaser {
    font-size: 20px;
    font-weight: bolder;
    margin-bottom: 5px;
  }

  .margin {
    margin-top: 20px;
  }

  .button {
    margin-top: 60px;
    border-radius: 20px;
    width: 60vw;
    background: rgb(2,0,36);
    background: linear-gradient(301deg, rgba(2,0,36,1) 0%, rgba(0,81,149,0.6895133053221288) 0%, rgba(13,236,119,1) 100%); 
    font-weight: bolder;
  }
