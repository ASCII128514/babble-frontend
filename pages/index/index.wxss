/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: rgb(252,252,252);
  background: linear-gradient(172deg, rgba(252,252,252,1) 0%, rgba(223,252,255,1) 73%, rgba(214,239,248,1) 100%, rgba(255,255,255,0) 100%);
}

.background {
    color: white;
    text-align: center;
    height: 70vh;
    width: 100%;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    border-bottom-left-radius: 50px;
    /* border-top-right-radius: 50px; */
    opacity: 0.9;
  }

  .content {
    padding-top: 10px;
    width: 100%;
    height: 30vh;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: column;
  }

  .title {
    font-size: 45px;
    font-weight: bolder;
    text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
  }

  .teaser {
    font-size: 16px;
    font-weight: bolder;
    margin-bottom: 5px;
  }

  .button {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
    margin-bottom: 40px;
    border-radius: 20px;
    width: 40vw;
    background-color:rgb(90, 151, 241);
    font-weight: bold;
    height: 40px;
  }
