/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.background {
    color: white;
    text-align: center;
    height: 70vh;
    width: 100%;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    border-bottom-left-radius: 40px;
  }

  .content {
    padding-top: 10px;
    width: 100%;
    height: 30vh;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: column;
  }

  .title {
    font-size: 45px;
    font-weight: bolder;
    text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
  }

  .teaser {
    font-size: 16px;
    font-weight: bolder;
    margin-bottom: 5px;
  }

  .button {
    margin-top: 10px;
    margin-bottom: 40px;
    border-radius: 20px;
    width: 40vw;
    background: rgb(2,0,36);
    background: linear-gradient(301deg, rgba(2,0,36,1) 0%, rgba(0,81,149,0.6895133053221288) 0%, rgba(13,236,119,1) 100%); 
    font-weight: bolder;
    height: 40px;
  }
