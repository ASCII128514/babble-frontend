/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: rgb(252,252,252);
  background: linear-gradient(172deg, rgba(252,252,252,1) 0%, rgba(241,249,250,1) 73%, rgba(233,248,251,1) 100%, rgba(255,255,255,0) 100%);
  height: 100vh;
}

.background {
    color: white;
    text-align: center;
    height: 65vh;
    width: 100%;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    border-bottom-left-radius: 50px;
    /* border-top-right-radius: 50px; */
    opacity: 0.9;
  }

  .content {
    padding-top: 10px;
    width: 100%;
    height: 40vh;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: column;
   
  }

  .symbol_section {
    padding-left: 15px;
  }

  .instruction_symbol {
    height: 15px;
    width: 15px;
  }

  .title {
    font-size: 30px;
    font-weight: bolder;
    text-shadow: 0px 1px rgba(0, 0, 0, 0.2);
  }

  .teaser {
    font-size: 20px;
    font-weight: bolder;
    margin-top: 5px;
    text-align: center;
    color: blueviolet;
  }

  .bottom-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
 
  .button {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 10px;
    margin-bottom: 40px;
    border-radius: 20px;
    width: 60vw;
    background-color:rgb(167, 195, 236);
    font-weight: bold;
    height: 40px;
  }
