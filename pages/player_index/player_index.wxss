/**player_index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100vh;
  background: rgb(252,252,252);
  background: linear-gradient(172deg, rgba(252,252,252,1) 0%, rgba(241,249,250,1) 73%, rgba(233,248,251,1) 100%, rgba(255,255,255,0) 100%);
  align-items: center;
}

.background {
  width: 100vw;
}

.background_picture {
    color: white;
    text-align: center;
    height: 65vh;
    width: 100%;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    border-bottom-left-radius: 50px;
    /* border-top-right-radius: 50px; */
    opacity: 0.9;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .title {
    font-size: 50px;
    font-weight: bolder;
    color: white;
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.9);
    font-family: serif;
  }


.form {
    margin-top: 25px;
    width: 85%;
    height: 30vh;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-between;
  }


  .teaser {
    margin-top: 10px;
    font-family: calibri;
    text-align: center;
    font-weight: bold;
    height: 5vh;
  }

  .entry_form {
    width: 50vw;
    margin-left: 20px;
    margin-right: 20px;
    margin-bottom: 20px;
    background-color: white;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    box-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    height: 5vh;
    text-align: center;
  }

.button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20px;
  margin-top: 40px;
  border-radius: 16px;
  width: 50vw;
  /* background-color: rgb(130, 96, 168); */
  background-color:rgb(90, 151, 241);
  color: white;
  font-weight: bold;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  height: 5vh;
}

.button:hover {
text-shadow: 0px 0px 6px rgba(255, 255, 255, 1);
transition: all 0.4s ease 0s;
}
