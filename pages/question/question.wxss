.container {
    text-align: center;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
    height: 100vh;
    width: 100vw;
    background: rgb(219,247,250);
    background: linear-gradient(124deg, rgba(219,247,250,1) 0%, rgba(223,252,255,1) 31%, rgba(214,239,248,1) 100%, rgba(255,255,255,0) 100%);
}


