/* pages/question/question.wxss */
.container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  background: rgb(252,252,252);
  background: linear-gradient(172deg, rgba(252,252,252,1) 0%, rgba(241,249,250,1) 73%, rgba(233,248,251,1) 100%, rgba(255,255,255,0) 100%);
}

.top-part {
  width: 100vw;
  height: 75%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 3px;
  /* background-color: blue; */
}

 .title {
   font-family: serif;
   font-size: 30px;
   height: 10%;
   /* background-color: greenyellow; */
 }

.avatar {
    text-align: center;
    height: 190px;
    width: 190px;
    background-size: cover !important;
    border-radius: 50%;
  }

.question {
    text-align: center;
    height: 40vh;
    width: 95%;
    background-color: whitesmoke;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight: bolder;
    font-family: calibri;
  }

.timer-section {
  height: 10%;
}

.timer-text {
  font-size: 10px;
  font-weight: light;
  color: grey
}

.timer {
  font-weight: 900;
  font-size: 30px;
  font-family: calibri;
}

/* bottom section*/
.round {
  font-size: 10px;
  font-weight: light;
  color: grey;
  /* background-color: green; */
}
/* bottom section*/

/* circle */
.circle-area {
  width: 100vw;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  /* background-color: blue; */
}

.progress_box{
    position: relative;
    width: 100vw;
    height: 360px;
    display: flex;
    align-items: center;
    justify-content: center;
    /* background-color: green; */
}

.progress_bg{
    position: absolute;
    width:300px;
    height: 300px;
}

.progress_canvas{
    width:300px;
    height: 300px;
}

.progress_text{
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
}

.progress_info{
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 1rpx;
  /* background-color: yellow; */
  height: 200px;
  width: 200px;
  text-align: center;
  padding-bottom: 25px;
  border-radius: 50%;
}
/* circle ends */