/* Top AREA */
  .top-area {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 65%;
    width: 90%;
    justify-content: space-around;
  }

  .title {
    margin: 15px;
    width: 70%;
    font-weight: bolder;
    font-size: 22px;
  }

  .timer {
    font-size: 30px;
  }

  .avatar {
    border-radius: 50%;
    height: 300px;
    background-size: cover !important;
  }

  /* Top AREA ends */

  .bottom-area {
    width: 100%;
    height: 25%;
    margin-bottom: 3px;
    margin-left: 8px;
    padding-right: 8px;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-between;
    font-weight: bolder;
  }

  .button {
    width: 220px;
    height: 110px; /* as the half of the width */
    border-top-left-radius: 110px;  /* 100px of height + 10px of border */
    border-top-right-radius: 110px; /* 100px of height + 10px of border */
    border: 3px solid black;
    border-bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    color:black;
    font-size: 30px;
  
  }
