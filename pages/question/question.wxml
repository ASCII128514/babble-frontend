<!-- pages/question/question.wxml -->
<view class="container">
  <!-- background -->
  <!-- Top area -->
  <view class="top-area">
    <!-- title -->
    <view class="title">
      <view class="round">Round {{currentGameRound}}/{{numberOfRounds}}</view>
      <view class="timer">Countdown: {{timerCountdown}}</view>
    </view>
    <!-- title ends -->
    <!-- question -->
    <view>{{question}}</view>
    <!-- question ends -->
  </view>
  <!-- Top area ends -->
  <!-- bottom area -->
  <!-- info: round and seconds -->
  <view class="bottom-area">
    <!-- button: found partner -->
    <view class="button" bindtap='goToQuestion'>Ready</view>
    <!-- button: found partner ends -->
  </view>
  <!-- info: round and seconds ends -->
  <!-- timer -->
  <view class="timer">00:20</view>
  <!-- timer ends -->
  <!-- bottom section -->
  <view class="b_section">
    <!-- buttons -->
    <view class="buttons-section">
      <!-- navigation button -->
      <view class="button" bindtap='buttonClicked'>READY</view>
      <!-- navigation button -->
    </view>
    <!-- buttons -->
  </view>
  <!-- bottom section -->
</view>