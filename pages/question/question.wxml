<!--pages/question/question.wxml-->
<view class="container">

  <!-- background -->
  
       <!-- Top area  -->
      <view class="top-area">

        <!-- title -->
          <view class="title">
            <view class="round">Round {{currentGameRound}}/{{numberOfRounds}}</view>
            <view class="timer">Countdown: {{timerCountdown}}</view>
          </view>
        <!-- title ends -->

        <!-- question -->
          <view>
            {{getApp().globalData.gameQuestion.question}}
          </view>
        <!-- question ends -->
     
      </view>
      <!-- Top area ends -->

      <!-- bottom area -->

        <!-- info: round and seconds -->
          <view class="bottom-area">
                    <!-- button: found partner -->
                        
                          <view class="button" bindtap='goToQuestion'>
                            Ready
                          </view>
                        
                    <!-- button: found partner ends -->
          </view>
        <!-- info: round and seconds ends -->

       

      <!-- bottom area ends -->


  <!-- background ends -->
</view>

