<view class="container">

    <!-- imagine -->
        <view class="background" style="background-image: url('http://lc-qaxMtbr0.cn-n1.lcfile.com/c5b6116d8a205363a3d5/rounds.png');">
        </view>
    <!-- imagine -->

    <!-- content -->
      <view class="content">
          <!-- title -->
            <view class="title">
              Set Rounds
            </view>
          <!-- title -->

          <!-- text -->
            <view class="text">
              How many rounds do you want the players to play?
            </view>
          <!-- text -->

          <!-- rounds picker -->
            <view class="section section_gap">
              <view class="picker">
                <slider class="slider-bar" bindchange="roundsSlider" min="0" max="10" show-value value="5" />
              </view>
            </view>
          <!-- rounds picker -->
      </view>
     <!-- content -->

    <!-- buttons -->

    <view class="buttons-section">
        <!-- dots -->
          <view class="dots">
            <view class="circle"></view>
            <view class="circle-1"></view>
            <view class="circle"></view>
            <view class="circle"></view>
          </view>
        <!-- dots ends -->

        <!-- navigation button -->
          <view class="button" bindtap='buttonClicked'>
                  Next
          </view>
        <!-- navigation button -->
    </view>
    <!-- buttons -->

</view>



