/* pages/take_selfie/take_selfie.wxss */
.page-body {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-size: cover !important;
  background: rgb(252, 252, 252);
  background: linear-gradient(172deg, rgba(252, 252, 252, 1) 0%, rgba(241, 249, 250, 1) 73%, rgba(233, 248, 251, 1) 100%, rgba(255, 255, 255, 0) 100%);
}

.camera {
  border-radius: 50%;
  height: 55vh;
}

/* selfie button */
.btn-area-1 {
  width:50%;
  height: 50px;
  margin-top: 20px;
  padding: 2px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20px;
  margin-top: 40px;
  border-radius: 16px;
  width: 50vw;
  /* background-color: rgb(130, 96, 168); */
  background-color:rgb(90, 151, 241);
  color: white;
  font-weight: bold;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  height: 5vh;
}

.button:hover {
text-shadow: 0px 0px 6px rgba(255, 255, 255, 1);
transition: all 0.4s ease 0s;
}
/* selfie button ends */
