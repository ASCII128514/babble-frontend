/* pages/find_partner/find_partner.wxss */
.container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  background: rgb(252,252,252);
  background: linear-gradient(172deg, rgba(252,252,252,1) 0%, rgba(241,249,250,1) 73%, rgba(233,248,251,1) 100%, rgba(255,255,255,0) 100%);
}

.top-area {
  /* background-color: blue; */
  width: 100vw;
  height: 60vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
}

.title {
  font-family: serif;
  margin-top: 10px;
}

.timer {
  font-weight: 900;
  font-size: 20px;
  font-family: calibri;
}

.avatar {
    text-align: center;
    height: 266px;
    width: 266px;
    background-size: cover !important;
    border-radius: 50%;
    padding-left: 1rpx;
    /* padding-top: 3rpx; */
  }

/* circle */
.circle-area {
  width: 100vw;
  height: 100vw;
  /* background-color: yellow; */
  display: flex;
  justify-content: center;
  align-items: center;

}
.progress_box{
    position: relative;
    width: 100vw;
    height: 360px;
    display: flex;
    align-items: center;
    justify-content: center;
    /* background-color: green; */
}

.progress_bg{
    position: absolute;
    width:300px;
    height: 300px;
}

.progress_canvas{
    width:300px;
    height: 300px;
}

.progress_text{
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
}

.progress_info{
  font-size: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  letter-spacing: 1rpx;
  /* background-color: yellow; */
  height: 200px;
  width: 200px;
  text-align: center;
  padding-bottom: 25px;
  border-radius: 50%;
}


/* circle ends */

/* bottom section*/
.buttons-section {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 100vw;
  height: 15vh;
  margin: 30px;
}

.round {
  font-family: calibri;
}

.button {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
  margin-bottom: 40px;
  border-radius: 20px;
  width: 60vw;
  background-color: rgb(167, 195, 236);
  font-weight: bold;
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  color: white;
}

.button:hover {
text-shadow: 0px 0px 6px rgba(255, 255, 255, 1);
transition: all 0.4s ease 0s;
}
/* bottom section ends*/