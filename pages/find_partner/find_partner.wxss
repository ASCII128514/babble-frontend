/* Top AREA */
  .top-area {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 65%;
    width: 90%;
    justify-content: space-around;
  }

  .title {
    margin: 15px;
    width: 70%;
    font-weight: bolder;
    font-size: 22px;
  }

  .avatar {
    border-radius: 50%;
    height: 300px;
    background-size: cover !important;
  }

  /* Top AREA ends */

  .bottom-area {
    background: rgb(2,0,36);
    background: linear-gradient(301deg, rgba(2,0,36,1) 0%, rgba(180,11,11,0.8641738034366222) 0%, rgba(6,64,143,1) 73%);
    width: 100%;
    height: 25%;
    margin-bottom: 3px;
    margin-left: 8px;
    padding-right: 8px;
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-between;
    font-weight: bolder;
  }

  .info {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
  }