<!--pages/find_partner/find_partner.wxml-->
<view class="container">

  <!-- background -->
  
       <!-- Top area  -->
      <view class="top-area">

        <!-- title -->
          <view class="title">
            <view class="round">Round {{numberOfRounds}}/{{currentGameRound}}</view>
            <view class="timer">00:20</view>
          </view>
        <!-- title ends -->

        <!-- test the API data -->
        <view>
          {{getApp().globalData.playerPair.url}}
        </view>
        <!-- test ends -->

        <!-- avatar -->
          <view>
            <image class="avatar" src="http://lc-qaxMtbr0.cn-n1.lcfile.com/31cf09e7f686ddea8e2e/selfie_1.jpg">
            IMG </image>
          </view>
        <!-- avatar ends -->
     
      </view>
      <!-- Top area ends -->

      <!-- bottom area -->

        <!-- info: round and seconds -->
          <view class="bottom-area">
                    <!-- button: found partner -->
                        <view class="btn-area" bindtap='goToQuestion'>
                          <view class="button" formType="submit" bindtap='toStatus'>
                            READY
                          </view>
                        </view>
                    <!-- button: found partner ends -->
          </view>
        <!-- info: round and seconds ends -->

       

      <!-- bottom area ends -->


  <!-- background ends -->
</view>
