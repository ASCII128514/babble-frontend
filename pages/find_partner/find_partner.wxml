<!-- pages/find_partner/find_partner.wxml -->
<view class="container">
  <!-- background -->

  <!-- Top area -->
    <view class="top-area">
        <!-- test the API data -->
            <view>{{getApp().globalData.playerPair.url}}</view>
        <!-- test ends -->
        
      <!-- text -->
        <view>
          Find {{name}}
        </view>
      <!-- text -->

       <!-- circle -->
        <view class="circle-area">
          <view class='progress_box'>
            <canvas class="progress_bg" canvas-id="canvasProgressbg"> </canvas>
            <canvas class="progress_canvas" canvas-id="canvasProgress"> </canvas>
            <view class="progress_text">
                <view class="progress_dot"></view>
                <text class='progress_info'> {{progress_txt}}</text>
            </view>
          </view>
        </view>
    <!-- circle -->

        <!-- avatar -->
            <!-- <view>
              <image class="avatar" src="http://lc-qaxMtbr0.cn-n1.lcfile.com/922e96f3068fb5f9c7d2"></image>
            </view> -->
        <!-- avatar ends -->

    </view>
  <!-- Top area ends -->

  <!-- bottom area -->
      <!-- info: round and seconds -->
    <view class="bottom-area">
        <view class="title">
            <view class="round">Round {{currentGameRound}}/{{numberOfRounds}}</view>
            <view class="timer">Countdown: {{timerCountdown}}</view>
        </view>
    </view>
    <!-- info: round and seconds -->


    <view class="buttons-section">
      <!-- button -->
        <view class="button" bindtap='buttonClicked'>
          FOUND
        </view>
      <!-- button -->
    </view>

    <!-- button: found partner ends -->

</view>
