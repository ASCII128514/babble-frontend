<view class="container">
  <!-- background -->

  <!-- Top area -->
      <view class="top-area">

        <view>Find {{name}}</view>
        <!-- test the API data -->
          <view>
            {{getApp().globalData.playerPair.url}}
          </view>
        <!-- test ends -->

        <!-- avatar -->
        
          <image class="avatar" src="http://lc-qaxMtbr0.cn-n1.lcfile.com/31cf09e7f686ddea8e2e/selfie_1.jpg">
