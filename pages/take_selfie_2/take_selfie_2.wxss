/* section for selfie preview */
.container {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  /* align-content: center; */
  align-items: center;
  background: rgb(2,0,36);
  background: linear-gradient(301deg, rgba(2,0,36,1) 0%, rgba(0,81,149,0.6895133053221288) 0%, rgba(13,236,119,1) 100%);
}

/* picture area */
.frame {
  height: 52vh;
  width: 92%;
  border-radius: 10px;
  background-color: whitesmoke;
  display: flex;
  justify-content: center;
  align-items: center;
  border-style: 3px solid black;
}

.picture {
  border-radius: 50%;
}
/* picture area ends */

/* buttons */
.buttons {
  display: flex;
  justify-content: space-around;
  width: 80%;
  height: 50px;
}

.go-back-button {
  border-radius: 5px;
  background-color: whitesmoke;
  width: 130px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: solid;
}

.go-button {
  border-radius: 5px;
  background-color: whitesmoke;
  width: 130px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: solid;
}
